<Window x:Class="AmoungUsLauncher.GameSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmoungUsLauncher"
        mc:Ignorable="d"
        Title="GameSelector" Height="122.951" Width="415.164" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Please browse for you Amoung Us game executable." VerticalAlignment="Top"/>
        <TextBox PreviewMouseDown="Path_PreviewMouseDown" Name="Path" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="10,31,0,0" TextWrapping="NoWrap" Text="{}" VerticalAlignment="Top" Width="295"/>
        <Button Name="BrowseBtn" Click="BrowseBtn_Click" Content="Browse" HorizontalAlignment="Left" Margin="305,31,0,0" Height="23" VerticalAlignment="Top" Width="75"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="322,62,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
